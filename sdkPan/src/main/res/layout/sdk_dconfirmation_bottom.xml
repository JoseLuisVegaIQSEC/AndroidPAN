<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sdk_pan_card_gray"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/cb_title"
        style="@style/sdk_pan_title_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sdkPanCbRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/text12" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cb_confirm"
        style="@style/sdk_pan_btn_blue_gradient"
        android:layout_width="match_parent"
        android:enabled="false"
        android:text="@string/lbl_continue"
        app:layout_constraintBottom_toTopOf="@+id/sdkPanSocialNetworkBtnSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
